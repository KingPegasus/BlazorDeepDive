<MudDrawer @bind-Open="@DrawerOpen" Class="py-2" Color="Color.Primary">
    <MudDrawerContainer Class="mud-height-full">
        <MudNavMenu Rounded="true" Margin="Margin.Dense" Color="Color.Inherit" Class="pa-2">
            <MudText Typo="Typo.h6" Class="px-4 pb-2">Menu</MudText>
            <MudDivider Class="my-2" />
            <MudNavLink Href="/"
                        Match="NavLinkMatch.All"
                        Icon="@Icons.Material.Rounded.Home"
                        IconColor="Color.Inherit">Home</MudNavLink>
            <MudNavLink Href="/weather"
                        Match="NavLinkMatch.Prefix"
                        Icon="@Icons.Material.Rounded.Air"
                        IconColor="Color.Inherit">Weather</MudNavLink>
            <MudNavLink Href="/servers"
                        Match="NavLinkMatch.Prefix"
                        Icon="@Icons.Material.Rounded.Storage"
                        IconColor="Color.Inherit">Servers</MudNavLink>
            <MudNavLink Href="/todolist"
                        Match="NavLinkMatch.Prefix"
                        Icon="@Icons.Material.Rounded.EditNote"
                        IconColor="Color.Inherit">To Do</MudNavLink>
        </MudNavMenu>
    </MudDrawerContainer>
</MudDrawer>

<style>
    .mud-nav-link:hover:not(.mud-nav-link-disabled) {
        color: white;
        cursor: pointer;
        text-decoration: none;
        background-color: rgb(228 227 227 / 35%);
    }

    .mud-nav-link.active:not(.mud-nav-link-disabled) {
        background-color: rgb(0 0 0 / 56%);
    }
</style>

@code {
    [Parameter]
    public bool DrawerOpen { get; set; }
}