@if (Item != null)
{
    <MudGrid @key="Item">
        <MudItem xs="1">
            <MudCheckBox T="bool" @bind-Value="Item.IsCompleted" />
        </MudItem>

        <MudItem xs="6">
            @if (Item.IsCompleted)
            {
                <MudTextField @bind-Value="Item.Name" Disabled Class="text-decoration-line-through" />
            }
            else
            {
                <MudTextField @bind-Value="Item.Name" />
            }
        </MudItem>

        <MudItem xs="5">
            @if (Item.IsCompleted)
            {
                <MudText>Completed at: @Item.DateCompleted.ToLongDateString()</MudText>
            }
        </MudItem>
    </MudGrid>
}

@code {
    [Parameter]
    public ToDoItem? Item { get; set; }
}
