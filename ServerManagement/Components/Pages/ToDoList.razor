@page "/todolist"
@rendermode InteractiveServer

<PageTitle>To Do</PageTitle>
<MudPaper Class="pt-3 mx-2 mt-2 mb-4" Elevation="0">
    <MudText Typo="Typo.h3">To Do</MudText>
</MudPaper>
<br />

<MudButton OnClick="AddTask" Variant="Variant.Filled" Color="Color.Primary" Class="mx-3">Add Task</MudButton>
<br />
<br />

@if (items != null && items.Count > 0)
{
    <ItemsListComponent Items="items"></ItemsListComponent>
}

@code {
    private List<ToDoItem> items = ToDoItemsRepository.GetItems();
    string Input = String.Empty;
    private void AddTask()
    {
        ToDoItemsRepository.AddItem(new ToDoItem { Name = "New Task" });
        items = ToDoItemsRepository.GetItems();
    }
}
